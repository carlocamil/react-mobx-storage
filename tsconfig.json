{
  "compilerOptions": {
    "outDir": ".",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es6",
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressExcessPropertyErrors": true,
    "declaration": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
